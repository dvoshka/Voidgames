    <div id="gameModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="modalGameTitle"></h3>
                <span class="close-button" onclick="closeGameModal()">&times;</span>
            </div>
            <iframe id="gameIframe" class="game-iframe" frameborder="0"></iframe>
        </div>
    </div>

    <script>
        // Функция для открытия модального окна с игрой
        function openGameModal(gameTitle, gameUrl) {
            document.getElementById('modalGameTitle').innerText = gameTitle;
            document.getElementById('gameIframe').src = gameUrl;
            document.getElementById('gameModal').style.display = 'flex'; // Показываем модальное окно
        }

        // Функция для закрытия модального окна
        function closeGameModal() {
            document.getElementById('gameModal').style.display = 'none'; // Скрываем модальное окно
            document.getElementById('gameIframe').src = ''; // Останавливаем игру, очищая src
        }

        // Закрытие модального окна при клике вне его (опционально)
        window.onclick = function(event) {
            const modal = document.getElementById('gameModal');
            if (event.target == modal) {
                closeGameModal();
            }
        }
    </script>
